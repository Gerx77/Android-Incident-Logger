<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">
    <!-- The main content view -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical" tools:context="com.riskwizard.incidentlogger.activities.Settings">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provide Information"
            android:id="@+id/provideInfoButton"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGrey"
            android:textColor="@color/colorBlack" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seed Database"
            android:id="@+id/seedDatabaseButton"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorGrey" />

    </LinearLayout>
    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1dp"
        android:background="@color/colorWhite"
        android:listSelector="@color/colorGrey" />
</android.support.v4.widget.DrawerLayout>