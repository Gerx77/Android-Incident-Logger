<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.riskwizard.incidentlogger.activities.AttachmentActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonshape" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Take Picture"
        android:id="@+id/btTakePic"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:drawableRight="@drawable/ic_action_camera"
        android:background="@drawable/buttonshape"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/attachmentsListView"
        android:stackFromBottom="false"
        android:layout_below="@+id/btTakePic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/btBack" />

</RelativeLayout>
